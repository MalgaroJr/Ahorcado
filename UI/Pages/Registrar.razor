@page "/registrarse"
@layout InitLayout
<PageTitle>Registrarse</PageTitle>

<main class="text-center mt-5 mx-auto" style="max-width: 330px;">
    <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" fill="rgb(140,30,155)" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
    </svg>
    <div class="form-control shadow mt-5">
        <div class="form-floating mt-4">
            <input type="text" class="form-control form-control-lg" id="user" name="user" placeholder="Username" @bind="user"/>
            <label for="user">Nombre de usuario</label>
        </div>
        <div class="form-floating mt-4">
            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Nombre" @bind="name"/>
            <label for="name">Nombre y apellido</label>
        </div>
        <div class="form-floating mt-4">
            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Contraseña" @bind="contraR"/>
            <label for="password">Contraseña</label>
        </div>
        <div class="form-floating mt-4">
            <input type="password" class="form-control form-control-lg" id="confirm" name="confirm" placeholder="Contraseña" @bind="contra2"/>
            <label for="confirm">Ingerse nuevamete la contraseña</label>
        </div>
        <button name="registrar" class="btn btn-primary btn-lg w-100 mt-5" @onclick="Verificar">Registrarse</button>
        <NavLink href="" class="link-info">Tengo una cuenta</NavLink> 
    </div>
    <div class="alert alert-danger">
        <p class="h6" name="notificacion">@msg</p>
    </div>
    
    
</main>

@code {
    private string user="";
    private string name="";
    private string contraR="";
    private string contra2="";
    private string msg="";

    void Verificar()
    {
        if (contraR.Equals(contra2))
        {
            if (user.Length <= 4)
            {
                msg = "Nombre de usuario demasiado corto";
            }
            else
            {
                msg = "Creando usuario...";
            }
        }
        else
        {
            msg = "Las contraseñas no coinciden";
        }
    }
}
